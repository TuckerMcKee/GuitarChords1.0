{
  "name": "guitar-chord-app",
  "private": true,
  "workspaces": [
    "client",
    "server"
  ],
  "scripts": {
    "dev": "npm run dev -w client & npm run dev -w server",
    "build": "npm -w client run build && npm -w server run build",
    "format": "prettier -w .",
    "lint": "echo \"(add your linter of choice)\"",
    "local": "bash scripts/run-local.sh",
    "test": "TS_NODE_COMPILER_OPTIONS='{\"module\":\"esnext\",\"moduleResolution\":\"node\"}' TS_NODE_TRANSPILE_ONLY=1 node --test --loader ts-node/esm client/src/lib/__tests__/diagrams.test.ts"
  },
  "devDependencies": {
    "prettier": "^3.3.3"
  }
}
